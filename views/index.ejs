<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
    <style>
        .fail {
            color: red;
            font-size: 24px;
        }

        .success {
            color: blue;
            font-size: 24px;
        }
    </style>
</head>

<body>
    <form name="register">
        <fieldset>
            <legend>로그인</legend>
            <label for="name">아이디</label>
            <input type="text" id="name" name="name" placeholder="아이디 입력" required>
            <label for="pass">비밀번호</label>
            <input type="password" id="pass" name="pass" placeholder="비밀번호 입력" required>
        </fieldset>
        <br>
        <button type="button" onclick="axiosPost()">회원가입</button>
        <div class="success"></div>
        <div class="fail"></div>
    </form>


    <script>
        const success = document.querySelector('.success')
        const fail = document.querySelector('.fail')

        function axiosPost() {
            console.log('함수 기능 성공');

            const form = document.forms['register'];

            const data = {
                name: form.name.value,
                pass: form.pass.value

            }

            axios({
                url: '/axios',
                method: 'POST',
                data: data
            }).then(function (abc) {
                console.log(abc);

                if (abc.data.message === '로그인 성공') {
                    success.textContent = abc.data.message;
                    fail.textContent = '';
                } else {
                    success.textContent = '';
                    fail.textContent = abc.data.message;
                }

            })

        }
    </script>
</body>


</html>